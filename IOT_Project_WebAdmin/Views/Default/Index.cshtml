    <link href="~/shopindex/layui/css/layui.css" rel="stylesheet" />
    <link href="~/shopindex/static/css/main.css" rel="stylesheet" />
    <script src="~/shopindex/layui/layui.js"></script>
    <title></title>
    <script src="https://cdn.staticfile.org/vue/2.4.2/vue.min.js"></script>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial;
            padding: 10px;
            background: #f1f1f1;
        }

        /* 头部标题 */
        .header {
            padding-top: 30px;
            text-align: left;
        }

            .header h1 {
                font-size: 50px;
            }

        /* 导航条 */
        .topnav {
            overflow: hidden;
            background-color: #c4c4c4;
        }

            /* 导航条链接 */
            .topnav a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                /* 链接颜色修改 */
                .topnav a:hover {
                    background-color: #f7c7f0;
                    color: #74b4cb;
                }

        /* 轮播图 */
        ul li {
            list-style: none;
        }

        .dian {
            padding-top: 0px;
            display: flex;
            position: absolute;
            bottom: 10px;
        }

            .dian li {
                padding-top: 0px;
                margin-top: 0px;
                width: 20px;
                height: 20px;
                background: #fff;
                margin: 10px 10px;
                border-radius: 50%;
            }

                .dian li.active {
                    padding-top: 0px;
                    margin-top: 0px;
                    background: blue;
                }

        .main {
            margin-top: 0px;
            width: 1100px;
            height: 400px;
            position: relative;
            display: flex;
            justify-content: center;
        }

            .main img {
                margin-top: 4px;
                padding-top: 3px;
                height: 400px;
                width: 1100px;
            }

        /* 新品首发 */
        .zhong {
            padding: 30px;
            text-align: left;
        }

            .zhong h1 {
                font-size: 50px;
            }

        /* 商品图 */
        #box ul {
            width: 1000px;
            margin: 50px 30px;
            text-align: right;
        }

            #box ul li {
                border-bottom: 1px solid #ddd;
                padding: 30px;
                float: right;
                overflow: hidden;
            }

                #box ul li img {
                    width: 200px;
                    height: 200px;
                    float: right;
                    border: none;
                }
    </style>

    <style>
        /* 打折促销 */
        .dazhe {
            padding-bottom: 10px;
            text-align: left;
        }

        .zhong h1 {
            font-size: 50px;
        }

        /* 商品图 */
        #shop ul {
            width: 1000px;
            margin: 50px 30px;
            text-align: right;
        }

            #shop ul li {
                border-bottom: 1px solid #ddd;
                padding: 30px;
                float: right;
                overflow: hidden;
            }

                #shop ul li img {
                    width: 200px;
                    height: 200px;
                    float: right;
                    border: none;
                }
    </style>


</head>
<body>
