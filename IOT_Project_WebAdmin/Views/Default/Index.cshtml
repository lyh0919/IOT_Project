        <script>
            /* 轮播图 */
            let zyy = new Vue({
                el: "#app",
                data() {
                    return {
                        activeIndex: 0,
                        timer: null,
                        list: [
                            "/img/23.jpg",
                            "/img/02.jpg",
                            "/img/16.jpg"
                        ],
                    }
                },
                mounted() {
                    this.run()
                },
                methods: {
                    run() {
                        this.timer = setInterval(() => {
                            //设置一个定时器
                            this.activeIndex++
                            //让下标每秒加一实现切换效果
                            //如果走到最后一张，让下标回到0
                            if (this.activeIndex === this.list.length) this.activeIndex = 0
                        }, 1000);
                    },
                    hover(i) {
                        clearInterval(this.timer)//鼠标放上去时先移除定时器
                        this.activeIndex = i //让当前的标签active激活
                        this.run()  //随后再走定时器
                    }
                },
            })
        </script>

